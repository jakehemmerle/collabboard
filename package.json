{
  "name": "collabboard",
  "private": true,
  "scripts": {
    "dev": "bun run --cwd apps/web dev",
    "build": "bun run --cwd apps/web build",
    "typecheck": "bun run --cwd apps/web typecheck",
    "lint": "bun run --cwd apps/web lint",
    "test": "bun run --cwd apps/web test",
    "test:watch": "bun run --cwd apps/web test:watch",
    "deploy": "bun run build && firebase deploy --only hosting --config firebase/firebase.json --project collabboard-dev-9f339",
    "emulators": "firebase emulators:start --config firebase/firebase.json --project collabboard-dev-9f339",
    "emulators:export": "firebase emulators:export ./firebase/emulator-data --config firebase/firebase.json --project collabboard-dev-9f339"
  },
  "workspaces": ["apps/web"]
}
