rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Board documents
    match /boards/{boardId} {
      // Anyone can read board metadata (board IDs are UUIDs so can't be enumerated)
      allow read: if true;

      // Any authenticated user can create a board as owner
      allow create: if request.auth != null;

      // Any authenticated user can update a board (join, edit, etc.)
      allow update: if request.auth != null;

      // Only the owner can delete a board
      allow delete: if request.auth != null
        && resource.data.ownerId == request.auth.uid;
    }

    // Board objects subcollection
    match /boards/{boardId}/objects/{objectId} {
      // Anyone can read objects (for anonymous link access)
      allow read: if true;

      // Any authenticated user can write objects
      allow write: if request.auth != null;
    }
  }
}
