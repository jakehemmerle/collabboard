rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Board documents
    match /boards/{boardId} {
      // Any authenticated user can read board metadata (needed for join flow;
      // board IDs are UUIDs so they can't be enumerated)
      allow read: if request.auth != null;

      // Any authenticated user can create a board as owner
      allow create: if request.auth != null
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.members[request.auth.uid].role == 'owner';

      // Members can update, but cannot change ownerId or remove themselves
      allow update: if request.auth != null
        && resource.data.members[request.auth.uid] != null
        && request.resource.data.ownerId == resource.data.ownerId
        && request.resource.data.members[request.auth.uid] != null;

      // Only the owner can delete a board
      allow delete: if request.auth != null
        && resource.data.ownerId == request.auth.uid;
    }

    // Board objects subcollection
    match /boards/{boardId}/objects/{objectId} {
      // Only board members can read/write objects
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/boards/$(boardId)).data.members[request.auth.uid] != null;
    }
  }
}
